extends layout

block content
  div.shopping-list
    div.list-header
        h1= list ? 'Einkaufsliste' : 'Keine Liste'
        a.btn.btn-logout#logout(href='/logout')
            i.fa.fa-sign-out
            span Auslogen
    div.list-content
        if list
            ul.list
                each item in list.items
                    li.list-item
                        h3= item.amount + ' x ' + item.display
                        h4= moment(item.added).format('HH:mm DD/MM/YYYY')
                        div.btn-group.pull-right
                            a.btn(href='/inc/' + item._id)
                                i.fa.fa-plus
                            a.btn(href='/dec/' + item._id)
                                i.fa.fa-minus
                            a.btn(href='/remove/' + item._id)
                                i.fa.fa-trash
    div.list-footer
        div.row
            div.col-3
                a.btn#add-item(href='/add')
                    i.fa.fa-plus
                    span Neues Element
            div.col-3
                a.btn#new-list(href='/new')
                    i.fa.fa-trash
                    span Neue Liste
            div.col-3
                a.btn#admin(href='/admin')
                    i.fa.fa-cogs
                    span Einstellungen